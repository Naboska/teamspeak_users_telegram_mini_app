{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "skipLibCheck": true,
    "baseUrl": "src",
    "typeRoots": ["./src/@types"],

    /* Bundler mode */
    "newLine": "lf",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "paths": {
      "@/*": ["*"]
    },

    /* Linting */
    "strict": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
